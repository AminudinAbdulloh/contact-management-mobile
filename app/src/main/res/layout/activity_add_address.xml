<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <!-- Header -->
    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Back Button & Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llBackToContactDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/padding_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:contentDescription="@string/back_to_contact_details"
                        android:src="@drawable/ic_back"
                        app:tint="@color/blue_400" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:text="@string/back_to_contact_details"
                        android:textColor="@color/blue_400"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:contentDescription="@string/add_new_address"
                        android:src="@drawable/ic_location"
                        app:tint="@color/blue_400" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/add_new_address"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Contact Info Card (Read-only) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:cardBackgroundColor="@color/gray_800"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium">

                    <View
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:background="@drawable/bg_circle_blue" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:layout_marginStart="-32dp"
                        android:contentDescription="@string/my_contacts"
                        android:src="@drawable/ic_person"
                        app:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvContactName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/full_name_label"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvContactEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/email_label"
                            android:textColor="@color/gray_400"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Address Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardBackgroundColor="@color/gray_800"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <!-- Street Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/street_label"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/street_label"
                            android:src="@drawable/ic_building"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etStreet"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:autofillHints="street"
                            android:background="@null"
                            android:hint="@string/street_address_hint"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- City Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/city_label"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/city_label"
                            android:src="@drawable/ic_building"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etCity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:autofillHints="city"
                            android:background="@null"
                            android:hint="@string/city_hint"
                            android:inputType="text"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Province Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/province_state_label"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/province_state_label"
                            android:src="@drawable/ic_map"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etProvince"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:autofillHints="province"
                            android:background="@null"
                            android:hint="@string/province_or_state_hint"
                            android:inputType="text"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Country Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/country_label"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/country_label"
                            android:src="@drawable/ic_map"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etCountry"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:autofillHints="country"
                            android:background="@null"
                            android:hint="@string/country_hint"
                            android:inputType="text"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Postal Code Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/postal_code_label"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/postal_code_label"
                            android:src="@drawable/ic_building"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etPostalCode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:autofillHints="postalCode"
                            android:background="@null"
                            android:hint="@string/postal_code_hint"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCancel"
                            style="@style/Button"
                            android:layout_height="@dimen/button_height_medium"
                            android:drawableStart="@drawable/ic_cancel"
                            android:layout_width="0dp"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_secondary"
                            android:text="@string/cancel" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSaveChanges"
                            style="@style/Button"
                            android:layout_height="@dimen/button_height_medium"
                            android:drawableStart="@drawable/ic_edit"
                            android:layout_width="0dp"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_primary"
                            android:text="@string/save" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <include layout="@layout/footer" />
</LinearLayout>
