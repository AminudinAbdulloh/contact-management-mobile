<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <!-- Header -->
    <include layout="@layout/header_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:contentDescription="@string/my_profile"
                    android:src="@drawable/ic_person"
                    app:tint="@color/blue_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/my_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Edit Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:cardBackgroundColor="@color/gray_800"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/icon_size_xlarge"
                            android:layout_height="@dimen/icon_size_xlarge"
                            android:background="@drawable/bg_circle_blue" />

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:layout_marginStart="-36dp"
                            android:contentDescription="@string/edit_profile"
                            android:src="@drawable/ic_edit"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/edit_profile"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Full Name Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="@string/full_name"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/full_name"
                            android:src="@drawable/ic_person"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etFullName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="Aminudin Abdulloh"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Update Profile Button -->
                    <Button
                        android:id="@+id/btnUpdateProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/margin_large"
                        android:background="@drawable/bg_button_primary"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="@dimen/padding_small"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/update_profile"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Change Password Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardBackgroundColor="@color/gray_800"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/icon_size_xlarge"
                            android:layout_height="@dimen/icon_size_xlarge"
                            android:background="@drawable/bg_circle_purple" />

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:layout_marginStart="-36dp"
                            android:contentDescription="@string/change_password"
                            android:src="@drawable/ic_key"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/change_password"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- New Password Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="@string/new_password"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/new_password"
                            android:src="@drawable/ic_lock"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etNewPassword"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/enter_your_new_password"
                            android:inputType="textPassword"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Confirm Password Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/confirm_new_password"
                        android:textColor="@color/gray_300"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/bg_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:contentDescription="@string/confirm_new_password"
                            android:src="@drawable/ic_check"
                            app:tint="@color/gray_500" />

                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/confirm_your_new_password"
                            android:inputType="textPassword"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray_500"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Update Password Button -->
                    <Button
                        android:id="@+id/btnUpdatePassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/margin_large"
                        android:background="@drawable/bg_button_primary"
                        android:drawableStart="@drawable/ic_key"
                        android:drawablePadding="@dimen/padding_small"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/update_password"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <include layout="@layout/footer" />
</LinearLayout>