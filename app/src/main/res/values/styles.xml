<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorAccent">@color/blue_400</item>
        <item name="android:windowBackground">@color/gray_900</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="android:statusBarColor">@color/blue_600</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Button Styles -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <!-- Matikan tint Material -->
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>

        <!-- Background & Text -->
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>

        <!-- Padding -->
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>

        <!-- Tambahan -->
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button">
        <!-- Matikan tint Material -->
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>

        <!-- Background & Text -->
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>

        <!-- Padding -->
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>

        <!-- Tambahan -->
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Button.Red" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
    </style>

    <!-- Input Field Style -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="boxStrokeColor">@color/blue_400</item>
    </style>

    <!-- Card Style -->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gray_800</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
    </style>
</resources>